{% extends 'layouts/layoutgeneral.html.twig' %}

{% block title %}Accueil film{% endblock %}

{% block body %}

<div>
    {% include '/film/filtre.html.twig' %}

    <table class="table table-striped table-bordered" style="width:100%">
       
        <thead>
            <tr>
                <th>Titre du film</th>
                <th>Genre</th>
                <th>Date de sortie</th>
                <th>Action</th>        
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.titre }}</td>
                <td>genre</td>
                <td>{{ film.dateSortie ? film.dateSortie|date('m/d/Y') }}</td>
                <td><a href=""><i class="fas fa-eye"></i></a></td>
            </tr>
        {% endfor %} 
        </tbody>
    </table>
        
</div>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="newfilm">
    Nouveau film
</button>
<div>


</div>
{% endblock %}
